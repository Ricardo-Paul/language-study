<%= simple_form_for(@pub) do |f| %>
<%= f.collection_select(:type_id, Type.all, :id, :name, :prompt => "Pick a category", :class => 'btn btn-primary' ) %>
    <%= f.input :content, as: :text, placeholder: "Share something or ask a question", required: true, hint: "this publication will be public", class: "card-text" %>
    <%= f.submit %>
<% end %>

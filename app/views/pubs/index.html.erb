                    <strong class="d-inline-block mb-2 text-success"> <%= pub.type.name %> </strong>
                    <h3 class="mb-0">
                      <a class="text-dark" > <%= pub.user.name %> </a>
                    </h3>
                    <div class="mb-1 text-muted"> <%= pub.created_at %> </div>
                    <p class="card-text mb-auto"> <%= pub.content %> </p>
                  </div>

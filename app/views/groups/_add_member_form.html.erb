<%= form_for group, :url => group_add_user_path(group) do |f| %>
    <%= f.fields_for :users, group.users.build do |user_fields|%>
        <%= user_fields.text_field :name, class:"form-control", placeholder: "Add member by username" %>
        <%= user_fields.submit "Add User" , class:"btn btn-primary mb-2" %>
    <% end %>
<% end %>


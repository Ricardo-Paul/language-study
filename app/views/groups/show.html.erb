

<div class="row row-one">
        <div class="col-md-4">
                <p> Group Name: </p> <%= @group.name %>
                <p> Group Admin </p>
                <%= @group.users.first.name %>
        </div>
        
        <div class="col-md-4">
                <h4> Group Description: </h4> <%= @group.description %> <br>
                <h3\> Add User: </h3> <br>
                <%= render partial: 'add_member_form', locals: {group: @group} %>
        </div>
        
        <div class="col-md-4">
                <h2> Group Members </h2>
                <% @group.users.each do |user| %>
                    <%= user.name %>
                <% end %>        
        </div>
</div>

<br> <br> <br>

<div class="row">
    <div class="col-md-4">
            <h2> Share With Your Peers </h2> <br>
            <%= render partial: 'group_pubs/group_pub_form', locals: {group: @group, group_pub: @group_pub} %>
    </div>

    <div class="col-md-8">
        <% @group.group_pubs.each do |pub| %>
            <div class="alert alert-primary" role="alert">
                    <%= pub.content %>
            </div>
        <% end %>
    </div>

</div>


